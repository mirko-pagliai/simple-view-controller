{
  "name": "mirko-pagliai/simple-view-control",
  "description": "A lightweight PHP framework focused on View and Controller layers",
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "Mirko Pagliai",
      "email": "mirko.pagliai@gmail.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "josegonzalez/dotenv": "^4.0",
    "symfony/http-foundation": "^7.3|^8.0"
  },
  "require-dev": {
    "cakephp/cakephp-codesniffer": "^5.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpunit/phpunit": "^11.2.7 || ^12.1",
    "phpstan/phpstan": "^2.1",
    "symfony/var-dumper": "^7.4|^8.0"
  },
  "suggest": {
    "twbs/bootstrap": "Bootstrap CSS framework for responsive design"
  },
  "autoload": {
    "psr-4": {
      "SimpleVC\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SimpleVC\\Test\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
